<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="@string/general"
        android:title="@string/general">

        <ListPreference
            android:key="language"
            android:title="@string/select_language"
            android:entries="@array/languages"
            android:entryValues="@array/languages"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="aspect_category"
        android:title="@string/account">

        <Preference
            android:title="@string/delete_data"
            android:key="delete_data"
            android:summary="@string/delete_data_summary"
            android:icon="@drawable/baseline_delete_24"/>

        <Preference
            android:title="@string/delete_account"
            android:icon="@drawable/baseline_person_off_24"
            android:key="delete_account"
            android:summary="@string/delete_account_summary"/>

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>